@model ListAppointmentViewModel


@{
    ViewData["Title"] = "All appointments";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="~/css/ListStyleSheet.css" type="text/css" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>

<div class="bg-image">
    <h1 class="text">Appointment List</h1>
    <p> <i class="arrow down"></i></p>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date of Appointment</th>
            <th>Service</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.AppointmentDate</td>
                <td>@appointment.Service.Name</td>
                <td>
                    <a asp-controller="Appointment" asp-action="BookAppointment" asp-route-id="@appointment.Id">Reschedule</a>
                    <span class="mx-1">|</span>
                    <a asp-controller="Appointment" asp-action="CancelAppointment" asp-route-id="@appointment.Id">Cancel Appointment</a>
                </td>
            </tr>
        }
    </tbody>
</table>