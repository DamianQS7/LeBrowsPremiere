@model ServicesViewModel
@{
    ViewData["Title"] = "Services Page";
    Layout = "_Layout";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="~/css/ServicesPageStyleSheet.css" type="text/css" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>



<div class="bg-image">
    <h1 class="text">Our Services</h1>
    <p> <i class="arrow down"></i></p>
</div>

<div class="container">
    <div class="row ">
        <div class="col-4">
            <div id="Slider" class="carousel slide" data-ride="carousal" data-interval="false">
                <ol class="carousel-indicators">
                    <li data-target="#Slider" data-slide-to="0" class="active"></li>
                    <li data-target="#Slider" data-slide-to="1"></li>
                    <li data-target="#Slider" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/img/ServicesImage/Service1(img2).png" style="width:400px; height:400px" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/ServicesImage/Service1(img1).jpg" style="width:400px; height:400px" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/ServicesImage/Service1(img3).png" style="width:400px; height:400px" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#Slider" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>

                </a>
                <a class="carousel-control-next" href="#Slider" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>

                </a>
            </div>
        </div>
        <div class="col-7" style="margin-top:20px; margin-left:20px">
            <h1>Ombre Powder Brows</h1>
            <p>
                Ombré shading is the newest trend in eyebrow semi-permanent makeup.
                It gives a soft shaded brow pencil look. Ombre powder brows are great
                for any skin type, less abrasive than microblading leave your eyebrows
                look fuller and more defined. Last longer usually up to 2 years.
            </p>

            <h3> Price:</h3>
            <p>
                $299 2 hrs with after care kit consist of 2 sessions <br/>

                or $180 per session with after care kit.
            </p>
            <a asp-controller="Appointment" asp-action="BookAppointment" asp-route-serviceId="1" class="btn btn-primary" id="services">Book an appointment</a>
        </div>
    </div>
</div>

