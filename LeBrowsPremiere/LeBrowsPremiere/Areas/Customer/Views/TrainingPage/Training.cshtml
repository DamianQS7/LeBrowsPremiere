@model TrainingViewModel
@{
    ViewData["Title"] = "Training Page";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/TrainingStyle.css" type="text/css" />

<div class="background">
    <h1 class="text">TRAINING</h1>
</div>

<div class="imgt1">
    <img src="~/img/training2.png" alt="Training" style="margin:10px; width:auto; height:600px">
</div>

<div class="container">
    <div class="row ">
        <div class="col-5">
            <img src="~/img/training.jpg" class="rounded float-end" alt="Training" style="width:600px; height:670px">

        </div>

        <div class="col-7">
            <h2> Get your detailed training by Canadian Instructor </h2>
            <p>
                Helping you achieve your success in Lash Business with Integrity and ethical practices. Learn the lash basics, application, theories, health and safety, retention, marketing and many more<span>&#128522;</span>!!! <br />
                <br />

                Get in touch using the link below and we will get back to you in the next 24 hours.
            </p>

            <div class="row justify-content-end">

                <div class="form">
                    <h1> Sign up and Enroll </h1>

                    <form class="row g-3" id="TrainingForm" asp-controller="TrainingPage" asp-action="Training" method="post" enctype="application/x-www-form-urlencoded">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


                        <div class="col-md-6">
                            <label asp-for="@Model.FirstName">First Name</label>
                            <input type="text" asp-for="@Model.FirstName" class="form-control" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="@Model.LastName">Last Name</label>
                            <input type="text" asp-for="@Model.LastName" class="form-control" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="@Model.Email">Email</label>
                            <input type="text" asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="@Model.CountryofResidence">Country of Residence</label>
                            <input type="text" asp-for="@Model.CountryofResidence" class="form-control" />

                        </div>


                        <br />

                        <button id="TrainingSubmit" type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>




        </div>

    </div>
</div>

